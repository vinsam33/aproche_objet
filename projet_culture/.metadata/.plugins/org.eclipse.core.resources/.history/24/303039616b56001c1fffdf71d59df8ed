package domain;

import java.util.ArrayList;
import java.util.Calendar;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class Halls {
	
	private Map<Integer,Map<Integer,Hall>> hallsDisponibility = new HashMap<>();
	private List<Hall> halls = new ArrayList<>();
	
	public Halls(List<Hall> halls) {
		this.halls = halls;
		for (int i = 1;i<=52;i++) {
			hallsDisponibility.put(i, new HashMap<Integer,Hall>());
		}
		for (Hall h : halls) {
			for (Calendar date : h.getDate()) {
				hallsDisponibility.get(date.get(Calendar.WEEK_OF_YEAR));
	}
		}
	}
}
